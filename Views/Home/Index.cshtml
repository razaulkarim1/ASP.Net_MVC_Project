
@{
    ViewBag.Title = "Index";
}

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="padding-top:0px;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/slide1.png" class="d-block w-100" height="600" alt="slide1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Luxurious Ferrari</h5>
                <p>Make your journey much luxurious then others, Choose one!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/slide2.png" class="d-block w-100" height="600" alt="slide2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Super Ford</h5>
                <p>Create some extra delight of your journey, please hurry!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/slide3.png" class="d-block w-100" height="600" alt="slide3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Aston Martin the great</h5>
                <p>If you want to make your journey special then choose this one!</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container py-4">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <img src="~/Images/ferarri.jpg" class="card-img-top" height="220" alt="ferarri">
                <div class="card-body">
                    <h5 class="card-title">Rent Ferrari Car</h5>
                    <p class="card-text">Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an it to make a type specimen book.</p>
                    <a href="@Url.Action("Index","Cars")" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <img src="~/Images/marcedes.jpeg" class="card-img-top" height="220" alt="marcedes">
                <div class="card-body">
                    <h5 class="card-title">Marcedes Car</h5>
                    <p class="card-text">Contrary to popular belief, Lorem Ips is not simply random text. It has roots from 45 BC, making it over 2000 years old.</p>
                    <a href="@Url.Action("Index","Customer")" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <img src="~/Images/maxus_car.jpeg" class="card-img-top" height="220" alt="marcedes">
                <div class="card-body">
                    <h5 class="card-title">Maxus Car</h5>
                    <p class="card-text">It is a long established fact that a reader will be distracted by the readable content a page when looking at its layout.</p>
                    <a href="@Url.Action("Index","Rent")" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
</div>



